@page "/ApplicationComponent"

<div class="col-12 application-component">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Содержание заказа</th>
                <th>Дата заказа</th>
                <th>Пожелания</th>
                <th>Имя клиента</th>
                <th>Адрес</th>
                <th>Телефон</th>
                <th>Повар</th>
                <th>Официант</th>
                <th>Позвонить</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in applicationsList)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Services</td>
                    <td>@item.OrderDate</td>
                    <td>@item.Wishes</td>
                    <td>@item.ClientName</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>
                        <button type="button">Назначить повара</button>
                    </td>
                    <td>
                        <button type="button">Назначить официанта</button>
                    </td>
                    <td>
                        <button type="button">Позвонить</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<Application> applicationsList;

    protected override void OnInitialized()
    {
        applicationsList = new List<Application>
        {
            new Application
            {
                Id = 1,
                Services = "Заказ 1",
                OrderDate = DateTime.Now,
                Wishes = "Нет особых пожеланий",
                ClientName = "Иван",
                Address = "ул. Пушкина, д. 10",
                Phone = "123-456-7890"
            },
            new Application
            {
                Id = 2,
                Services = "Заказ 2",
                OrderDate = DateTime.Now.AddDays(-1),
                Wishes = "Соус на боке",
                ClientName = "Мария",
                Address = "ул. Лермонтова, д. 20",
                Phone = "987-654-3210"
            },
        };
    }

    private class Application
    {
        public int Id { get; set; }
        public string Services { get; set; }
        public DateTime OrderDate { get; set; }
        public string Wishes { get; set; }
        public string ClientName { get; set; }
        public string Address { get; set; }
        public string Phone { get; set; }
    }
}
