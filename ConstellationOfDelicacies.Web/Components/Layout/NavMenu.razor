@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using ConstellationOfDelicacies.Web.Components.Layout.NavMenus

<AuthorizeView Roles="Сотрудник, Менеджер, Пользователь">
    <NotAuthorized>
        <NavMenuUser />
    </NotAuthorized>
</AuthorizeView>

<AuthorizeView Roles="Пользователь">
    <Authorized >
        <NavMenuUserAuth/>
    </Authorized>
</AuthorizeView>

<AuthorizeView Roles="Менеджер">
    <Authorized>
        <NavMenuManager/>
    </Authorized>
</AuthorizeView>

<AuthorizeView Roles="Сотрудник">
    <Authorized>
        <NavMenuWorker/>
    </Authorized>
</AuthorizeView>