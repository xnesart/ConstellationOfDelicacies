@rendermode InteractiveServer

<div class="navmenu">
    <div class="navmenu-logo">
        <a href="/">CoD</a>
    </div>
    <nav class="navmenu-links">
        <div class="navmenu-link">
            <NavLink Match="NavLinkMatch.All">Банкет</NavLink>
        </div>
        <div class="navmenu-link">
            <NavLink Match="NavLinkMatch.All">Фуршет</NavLink>
        </div>
        <div class="navmenu-link">
            <NavLink Match="NavLinkMatch.All">Кофе-брейк</NavLink>
        </div>
    </nav>
    <div class="navmenu-user"> 
        @if (@isLogedIn == false)
        {
            <button class="navmenu-button" @onclick="LogIn">Войти</button>
        } 
        else
        {
            <img class="navmenu-icon" src="/Resources/icons/profile.svg" alt="Profile" />

            <img class="navmenu-icon" src="/Resources/icons/menu.svg" alt="Menu" />
        }              
    </div>
</div>

@code {
    private bool isLogedIn = false;

    private void LogIn()
    {
        isLogedIn = true;
    }
}
