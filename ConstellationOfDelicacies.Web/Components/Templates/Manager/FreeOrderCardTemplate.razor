@using ConstellationOfDelicacies.Bll.Clients
@using ConstellationOfDelicacies.Bll.Interfaces
@using ConstellationOfDelicacies.Bll.Models.InputModels
@rendermode InteractiveServer
@inject NavigationManager navManager

<Card>
    <CardBody Class="d-flex p-2 flex-row justify-content-between ">
        <div>
            <CardTitle>Заказ @Order!.Id</CardTitle>
            <CardSubTitle>Заказчик: @_userName</CardSubTitle>
            <CardText>Пожелания: @Order!.Comment</CardText>
        </div>
        <div class="d-flex align-items-center">
            <Button Color="ButtonColor.Primary" @onclick="AcceptOrder">Принять</Button>
        </div>
    </CardBody>
</Card>

    @code {

    [Parameter]
    public OrdersOutputModel Order { get; set; }

    private string? _userName;
    private int _managerId;

    protected override void OnAfterRender(bool firstRender)
    {
        if (Order.Tasks != null)
        {
            var user = Order.Tasks.Where(t => t.Title == "Пользователь").Single().Users.First();
            _userName = $"{user.FirstName} {user.LastName}";
            StateHasChanged();
        }
        base.OnAfterRender(firstRender);
    }

    public void AcceptOrder()
    {
        OrderInputModel addManager = new OrderInputModel();
        addManager.UserId = _managerId;
        addManager.Id = Order!.Id;

        IOrderClient orderClient = new OrderClient();
        orderClient.AddManagerToOrder(addManager);

        navManager.NavigateTo($"/order{Order!.Id}");
    }
}
